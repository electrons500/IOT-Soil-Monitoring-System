@model IEnumerable<Frontend.Models.Data.ViewModel.FarmViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_OfficerDashboardLayout.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-md-8">
                            <h1>List of Registered Farms</h1>
                        </div>
                        <div class="col-md-4">
                            <a class="btn btn-primary text-white" asp-action="GenerateReport"><span class="fa fa-paperclip"></span> Generate report</a>
                        </div>

                    </div>
                    <br />
                    <div class="card shadow">
                        <div class="card-body">
                            <table id="farmTable" class="table table-sm table-hover table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FarmName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Location)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.RegionId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FarmerId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FarmerContact)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Scripts{

    <script src="~/js/Tables/FarmsRegisteredByOfficerList.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>

}
