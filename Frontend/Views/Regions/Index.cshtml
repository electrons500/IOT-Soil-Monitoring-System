@model IEnumerable<Frontend.Models.Data.ViewModel.RegionViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h1>List of Regions</h1>
                    <br />
                    <div class="card shadow">
                        <div class="card-header bg-transparent">
                            <a asp-controller="Regions" asp-action="AddRegions" class="btn btn-primary"><span class="fa fa-plus-circle"></span> Add new region</a>
                        </div>
                        <div class="card-body">
                            <table id="emptable" class="table table table-sm table-hover  table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.RegionId)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.RegionName)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>                             
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script src="~/js/Tables/RegionsList.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>


}
