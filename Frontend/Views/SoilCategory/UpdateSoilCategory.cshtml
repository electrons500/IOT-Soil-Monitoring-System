@model Frontend.Models.Data.ViewModel.SoilCategoryViewModel

@{
    ViewData["Title"] = "UpdateSoilCategory";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";

}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card shadow">
                        <div class="card-header bg-transparent" >
                            <h3 class="text-primary"><span class="fa fa-edit"></span> Edit soil category</h3>
                        </div>
                        <div class="card-body">
                            <form asp-action="UpdateSoilCategory">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="SoilCategoryId" />
                                <div class="form-group">
                                    <label asp-for="SoilName" class="control-label"></label>
                                    <input asp-for="SoilName" class="form-control" />
                                    <span asp-validation-for="SoilName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary"><span class="fa fa-save"></span> Submit</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







