@model IEnumerable<Frontend.Models.Data.ViewModel.ArduinoViewModel>

@{
    ViewData["Title"] = "Registerd devices";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}



<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-md-8">
                            <h1>List of registered devices</h1>
                        </div>
                        <div class="col-md-4">
                            <a class="btn btn-primary text-white" asp-action="GenerateReport"><span class="fa fa-paperclip"></span> Generate report</a>
                        </div>

                    </div>
                    <br />
                    <div class="card shadow">
                        <div class="card-body">
                            <table id="arduinoTable" class="table table-sm table-hover  table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Device Serial No.
                                        </th>
                                        <th>
                                            VID No.
                                        </th>
                                        <th>
                                            PID No.
                                        </th>
                                        <th>
                                            BN No.
                                        </th>
                                        <th>
                                            Date
                                        </th>

                                        <th></th>
                                    </tr>
                                </thead>


                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>






@section Scripts{

    
    <script src="~/js/Tables/DeployedArduinoList.js"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>

}
