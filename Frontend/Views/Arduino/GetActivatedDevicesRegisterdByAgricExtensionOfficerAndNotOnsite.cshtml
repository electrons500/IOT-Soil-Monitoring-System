@model IEnumerable<Frontend.Models.Data.ViewModel.ArduinoViewModel>
@{
    ViewData["Title"] = "GetActivatedDevicesRegisterdByAgricExtensionOfficerAndNotOnsite";
    Layout = "~/Views/Shared/_OfficerDashboardLayout.cshtml";

}


<br />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3 class="title-5 m-b-35">List of activated devices that are not on the farm</h3>
            <div class="card shadow">
                <div class="card-body">
                    <table id="unactivatedDevicesAndNotOnsiteTable" class="table table-hover table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.SerialNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Vid)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Bn)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.IsActivated)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsOnsite)
                                </th>

                                <th></th>
                            </tr>
                        </thead>

                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/js/Tables/GetActivatedDevicesRegisterdByAgricExtensionOfficerAndNotOnsiteList.js"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>


}
